site_name: ${CMAKE_PROJECT_NAME} ${CMAKE_PROJECT_VERSION} User Documentation
site_author: Marcel Bollmann
repo_url: https://bitbucket.org/mbollmann/cora/
theme: readthedocs
markdown_extensions:
  - abbr
  - admonition
  - attr_list
  - def_list
  - footnotes
  - sane_lists
  - smarty
pages:
  - Home: index.md
  - Installation and Configuration:
      - 'Installation': setup-install.md
      - 'Server-Side Configuration': setup-config.md
  - Administrative Tasks:
      - 'User Accounts': admin-users.md
      - 'Projects': admin-projects.md
      - 'Tagsets': admin-tagsets.md
      - 'External Annotation Tools': admin-taggers.md
      - 'Server Notifications': admin-notices.md
  - Working on Documents:
      - 'Using the web interface': using.md
      - 'Editing Tokens': edittoken.md
  - Further Information:
      - 'Annotation Layers': layers.md
      - 'Document Model': document-model.md
      - 'CorA-XML File Format': coraxml.md
docs_dir: ${CMAKE_SOURCE_DIR}/doc/mkdocs/docs/
site_dir: ${CMAKE_BINARY_DIR}/docs/user/
strict: true
