$status = get_database_status($installer);

function echo_errors($errors, $caption=null) {
  global $errors_occured;
  $errors_occured = true;
  echo '<div class="error">';
  if ($caption) {
    echo "<strong>$caption</strong> ";
  }
  echo implode("<br/>", $errors);
  echo '</div>';
}

function recheck_and_save() {
  global $errors_occured;
  global $installer;
  global $settings;
  global $status;
  $installer->setDBInfo($settings['DBINFO']);
  $status = get_database_status($installer);
  if (!$errors_occured) {
    try {
      Cfg::save_user_opts();
    } catch (Exception $ex) {
      echo_errors(
        array("Database settings could not be saved:",
              $ex->getMessage(),
              "If you changed the defaults, you might need to edit your config.php manually.")
      );
    }
  }
}

