/** @file error.php
 * Display an error message in the case of exceptions.
 */

function _gui_make_title() {
  if (class_exists('Cfg')) {
    $title = Cfg::get('title');
    $longtitle = Cfg::get('longtitle');
    $version = Cfg::get('version');
    return "Error | $title ($longtitle) $version";
  } else {
    return "Error | CorA (Corpus Annotator)";
  }
}

